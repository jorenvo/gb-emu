{
  "compilerOptions": {
    "target": "esnext",
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "noEmitOnError": true,
    "outFile": "dist/js/emu.js",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
